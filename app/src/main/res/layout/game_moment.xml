<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/ready"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:text="준비"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/moment"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="아래 숫자를 외워주세요 !"
                android:layout_gravity="top"
                android:gravity="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/readygame"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Ready"
                android:textSize="30sp" />

        <GridLayout
            android:id="@+id/gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:rowCount="3">

            <TextView
                android:id="@+id/text1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/numberbox"
                android:onClick="text1Clicked"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/numberbox"
                android:onClick="text2Clicked"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/numberbox"
                android:onClick="text3Clicked"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/numberbox"
                android:onClick="text4Clicked"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/numberbox"
                android:onClick="text5Clicked"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/text6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/numberbox"
                android:onClick="text6Clicked"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/text7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/numberbox"
                android:onClick="text7Clicked"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/text8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/numberbox"
                android:onClick="text8Clicked"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/text9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/numberbox"
                android:onClick="text9Clicked"
                android:textColor="@color/black"
                android:textSize="40sp" />


        </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timerset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#EEEEEE"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!--타이머 세트-->

            <TextView
                android:id="@+id/Qnumber"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@color/skyblue"
                android:text="현재 문제 : 1"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/RightAnswer"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@color/skyblue"
                android:text="맞은 문제 : 0 / 10"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
